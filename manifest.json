{
  "manifest_version": 3,
  "name": "Hey Anywhere",
  "version": "1.0",
  "description": "Fill inputs with random sentences in multiple languages",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
